# Application
APP_NAME=AgenticSocialMedia
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database (PostgreSQL via Supabase)
# IMPORTANT: Use the CONNECTION POOLER string from Supabase, not the direct connection!
# Get this from: Supabase Dashboard → Database → Connection String → Session pooler
#
# Choose pooler type:
# - Session pooler (port 5432): For traditional backends with ORMs (RECOMMENDED for this app)
# - Transaction pooler (port 6543): For serverless/stateless applications
#
# Format: postgresql://postgres.PROJECT_REF:PASSWORD@aws-REGION.pooler.supabase.com:5432/postgres
DATABASE_URL=postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-REGION.pooler.supabase.com:5432/postgres
DATABASE_ECHO=False

# Supabase (for file storage)
# Get these from: Supabase Dashboard → Settings → API
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Redis
REDIS_URL=redis://localhost:6379/0

# OpenAI (Phase 4+ - leave empty for now)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Claude (Phase 4+ - optional, leave empty for now)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Groq LLM (Phase 4+ - primary LLM provider)
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-70b-versatile
USE_MOCK_AI=false

# Google OAuth (Phase 5 - leave empty for now)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# Instagram OAuth (Phase 5 - leave empty for now)
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=
INSTAGRAM_REDIRECT_URI=http://localhost:8000/api/auth/instagram/callback

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Agent Configuration
AGENT_MAX_ACTIONS_PER_DAY=10
AGENT_CACHE_TTL_SECONDS=3600
